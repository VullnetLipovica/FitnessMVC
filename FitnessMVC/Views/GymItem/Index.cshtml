@model IEnumerable<GymItem>

<style>
    .card {
        width: 444px;
        padding: 20px;
    }

    body {
        background: #eee;
    }

</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card p-3 bg-white ">
                    <i class="fa fa-apple"></i>
                    <div class="about-product text-center mt-2">
                        <img src="https://i.imgur.com/3VTaSeb.png" width="300">
                        <div>
                            <h4>@item.Name</h4>
                            <h6 class="mt-0 text-black-50">Apple pro display XDR</h6>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between total font-weight-bold mt-4">
                        <span>Total</span>
                        <span>@item.Price $</span>
                    </div>

                    <div class="btn-group">
                        <a type="button" asp-controller="GymItem" asp-action="Details" asp-route-id="@item.GymItemId"
                           class="btn btn-sm btn-outline-secondary">View</a>
                        <a type="button" asp-controller="GymItem" asp-action="Edit" asp-route-id="@item.GymItemId"
                           class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a type="button" asp-controller="GymItem" asp-action="Delete" asp-route-id="@item.GymItemId"
                           class="btn btn-sm btn-outline-secondary">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>