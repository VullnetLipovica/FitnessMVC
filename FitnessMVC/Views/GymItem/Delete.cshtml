﻿@using FitnessMVC.Data.Enum
@model GymItem

<h1>Are you sure you want to delete this GymItem?</h1>

<head>
    <link href="~/css/Create.css" rel="stylesheet" media="all" />
</head>

<div class="registration-form">
    <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <h1>Update GymItem</h1>
        <div class="form-group">
            <input asp-for="Name" class="form-control item" placeholder="GymItem Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Description" class="form-control item" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Price" class="form-control item" placeholder="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <form action="Delete" method="post">
                <input type="hidden" asp-for="GymItemId" />
                <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
            </form>
        </div>

    </form>
</div>

